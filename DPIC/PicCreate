#include "..\\dpic.h"
#include <string.h>

/* Picture create function */
BOOL PicCreate( PIC *P, INT PicW, INT PicH )
{
  if (P == NULL)
    if ((P = malloc(sizeof(PIC))) == NULL)
      return FALSE;
  if ((P->Pixels = malloc(sizeof(ULONG) * PicW * PicH)) == NULL)
  {
    free(P);
    return FALSE;
  }
  memset(P->Pixels, 0, sizeof(ULONG) * PicW * PicH);
  P->PicW = P->PicH = 0;
  P->PicW = PicW;
  P->PicH = PicH;
  return TRUE;
} /* End of 'PicCreate' function */

/* Picture free function */
VOID PicFree( PIC *P )
{
  if (P->Pixels != NULL)
    free(P->Pixels);
} /* End of 'PicFree' function */

/* END OF 'PICCREATE.C' FILE */
